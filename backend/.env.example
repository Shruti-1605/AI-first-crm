# Environment Configuration for AI-First CRM
# Copy this file to .env and fill in your actual values

GROQ_API_KEY=your_groq_api_key_here

# Database Configuration - Choose one:
# SQLite (Development)
DATABASE_URL=sqlite:///./crm_database.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/crm_database

# MySQL (Production)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/crm_database

# Development settings
DEBUG=True
CORS_ORIGINS=["http://localhost:3000"]

# AI Model Configuration
PRIMARY_MODEL=gemma2-9b-it
FALLBACK_MODEL=llama-3.3-70b-versatile
AI_TEMPERATURE=0.1